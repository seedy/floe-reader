{
	"extends": [
		"plugin:storybook/recommended",
		"plugin:tailwindcss/recommended",
		"next/core-web-vitals"
	],
	"plugins": ["simple-import-sort", "unused-imports"],
	"rules": {
		"unused-imports/no-unused-imports": "error",
		"unused-imports/no-unused-vars": [
			"warn",
			{
				"vars": "all",
				"varsIgnorePattern": "^_",
				"args": "after-used",
				"argsIgnorePattern": "^_"
			}
		]
	}
}
